{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es2018",
            "dom"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "newLine": "LF",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "preserveConstEnums": true,
        "pretty": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2018",
        "typeRoots": [
            "node_modules/@types",
            "typings"
        ]
    }
}
